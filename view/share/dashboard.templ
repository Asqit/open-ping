package share

import "github.com/asqit/open-ping/types"

templ Dashboard(pings []types.PingView) {
	<div class="mb-8 border-b border-zinc-800 pb-4">
		<h1 class="text-sm font-bold tracking-widest uppercase">OPEN-PING DASHBOARD</h1>
	</div>
	<div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
		for _, p := range pings {
			@TableRow(p)
		}
	</div>
}
